# Render Production Environment Configuration
# Copy this to .env for Render deployment

# Server Configuration
PORT=10000
NODE_ENV=production
SERVER_URL=https://your-backend-url.onrender.com

# MongoDB Atlas Configuration (Replace with your Atlas connection string)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/project-camp?retryWrites=true&w=majority

# JWT Secrets (CRITICAL: Generate strong secrets!)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ACCESS_TOKEN_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_AT_LEAST_32_CHARACTERS_LONG
REFRESH_TOKEN_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_AT_LEAST_32_CHARACTERS_LONG
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=30d

# CORS Configuration (Update with your frontend URL)
CORS_ORIGIN=https://your-frontend-url.onrender.com

# Email Configuration (Optional for free tier)
MAILTRAP_SMTP_HOST=smtp.mailtrap.io
MAILTRAP_SMTP_PORT=2525
MAILTRAP_SMTP_USER=your-mailtrap-user
MAILTRAP_SMTP_PASS=your-mailtrap-password
MAILTRAP_SENDER_EMAIL=noreply@projectcamp.com

# Password Reset URL
FORGOT_PASSWORD_REDIRECT_URL=https://your-frontend-url.onrender.com/reset-password

# Logging
LOG_LEVEL=info
