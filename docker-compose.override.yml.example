# Docker Compose Override Example
# Copy this to docker-compose.override.yml for production customizations
# docker-compose automatically merges this with docker-compose.yml

version: '3.8'

services:
  backend:
    # Resource limits for production
    deploy:
      resources:
        limits:
          cpus: '2'
          memory: 1G
        reservations:
          cpus: '1'
          memory: 512M
      
      # Restart policy
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
        window: 120s
    
    # Logging configuration
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "5"
        compress: "true"
    
    # Additional environment variables
    environment:
      - LOG_LEVEL=info
      - MAX_REQUEST_SIZE=10mb
    
    # Labels for monitoring tools (Prometheus, etc.)
    labels:
      - "com.projectcamp.service=backend"
      - "com.projectcamp.version=1.0.0"

  mongodb:
    # Resource limits
    deploy:
      resources:
        limits:
          cpus: '2'
          memory: 2G
        reservations:
          cpus: '1'
          memory: 1G
    
    # Logging
    logging:
      driver: "json-file"
      options:
        max-size: "50m"
        max-file: "3"
    
    # Command options for production
    command: 
      - --wiredTigerCacheSizeGB=1.5
      - --auth
    
    # Labels
    labels:
      - "com.projectcamp.service=database"
      - "com.projectcamp.version=6.0"

